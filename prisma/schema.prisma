generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Word {
  id            Int     @id @default(autoincrement())
  en            String @unique
  pt            String
  description   String?

  dictionary    Json?
  isAbstract    Boolean @default(false)
  partOfSpeech  PartOfSpeech?

  imageUrl      String?
  imageTried    Boolean @default(false)

  gifUrl        String?
  gifTried      Boolean @default(false)

  categoryId    Int?
  category      Category? @relation(fields: [categoryId], references: [id])

  examples      Example[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  review      Review?
  
  @@index([categoryId])
  @@index([isAbstract])
}

model Category {
  id   Int    @id @default(autoincrement())
  slug String @unique
  name String 
  level String?
  description String?

  words Word[]
}

model Example {
  id     Int  @id @default(autoincrement())
  wordId Int
  word   Word @relation(fields: [wordId], references: [id])

  affirmativeEn String
  affirmativePt String

  negativeEn String
  negativePt String

  interrogativeEn String
  interrogativePt String
}
enum PartOfSpeech {
  noun
  verb
  adjective
  adverb
  preposition
  conjunction
  pronoun
  interjection
  numeral
}

model Review {
  id           Int   @id @default(autoincrement())
  wordId       Int   @unique
  word         Word     @relation(fields: [wordId], references: [id])

  interval     Int      // dias
  easeFactor   Float    // normalmente come√ßa em 2.5
  repetitions  Int
  nextReviewAt DateTime
  lastGrade    Int?

  createdAt    DateTime @default(now())
}